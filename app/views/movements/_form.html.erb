<%= form_with(model: movement, url: "/groups/#{@group.id}/movements") do |form| %>
  <% if movement.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(movement.errors.count, "error") %> prohibited this movement from being saved:</h2>
      <ul>
        <% movement.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.number_field :amount %>
  </div>
  <div>
    <%= form.label :group, style: "display: block" %>
    <%= form.collection_check_boxes(:group_ids, Group.all, :id, :name ) do |b| %>
        <i class="<%= @icons.values[b.object.icon] %>"></i>
        <%=b.text%>
        <% if b.object.id == @group.id %>
          <%=b.check_box checked: true %>
        <% else %>
          <%=b.check_box %>
        <% end %>
    <% end %>
  </div>
  <div>
    <%= form.submit 'Save' %>
  </div>
<% end %>
